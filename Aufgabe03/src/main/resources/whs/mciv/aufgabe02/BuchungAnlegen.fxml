<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane id="AnchorPane" prefHeight="559.0" prefWidth="520.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="whs.mciv.aufgabe02.windowController.BuchungAnlegenController">
    <children>
        <Label layoutX="25.0" layoutY="25.0" text="Buchung anlegen">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>
        <Label layoutX="25.0" layoutY="75.0" text="Buchungs-ID" />
        <TextField fx:id="id" disable="true" editable="false" layoutX="195.0" layoutY="71.0" prefHeight="25.0" prefWidth="300.0" text="Buchungs-ID" />

        <Label layoutX="25.0" layoutY="125.0" text="Kunde *" />
        <ComboBox fx:id="kundeComboBox" layoutX="195.0" layoutY="121.0" prefHeight="25.0" prefWidth="300.0" promptText="Kunde auswählen" />

        <Label layoutX="25.0" layoutY="175.0" text="Status" />
        <TextField fx:id="buchungsStatus" disable="true" layoutX="195.0" layoutY="171.0" prefHeight="25.0" prefWidth="300.0" text="neu" />

        <Label layoutX="25.0" layoutY="225.0" text="Anzahl der Reisenden *" />
        <TextField fx:id="personenanzahl" layoutX="195.0" layoutY="221.0" prefHeight="25.0" prefWidth="300.0" promptText="2" text="2" />

        <Label layoutX="25.0" layoutY="275.0" text="Anreisedatum *" />
        <DatePicker fx:id="anreisedatum" layoutX="195.0" layoutY="271.0" prefHeight="25.0" prefWidth="300.0" promptText="Anreisedatum" />

        <Label layoutX="25.0" layoutY="325.0" text="Anzahl der Übernachtungen *" />
        <TextField fx:id="anzahlDerNaechte" layoutX="195.0" layoutY="321.0" prefHeight="25.0" prefWidth="300.0" promptText="10" text="10" />

        <Label layoutX="25.0" layoutY="375.0" text="Reiseziel *" />
        <ComboBox fx:id="reisezielComboBox" layoutX="195.0" layoutY="371.0" prefHeight="25.0" prefWidth="300.0" promptText="Reiseziel auswählen" />

        <Label layoutX="25.0" layoutY="425.0" text="Verpflegung *" />
        <ComboBox fx:id="verpflegung" layoutX="195.0" layoutY="421.0" prefHeight="25.0" prefWidth="300.0" promptText="Verpflegung auswählen">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Halbpension" />
                    <String fx:value="Vollpension" />
                </FXCollections>
            </items>
        </ComboBox>

        <Label layoutX="25.0" layoutY="475.0" text="Gesamtpreis (in EUR)" />
        <TextField fx:id="gesamtpreis" disable="true" layoutX="195.0" layoutY="471.0" prefHeight="25.0" prefWidth="300.0" promptText="150.00" text="0.00" />

        <Button fx:id="speichern" layoutX="297.0" layoutY="525.0" mnemonicParsing="false" text="Speichern" />
        <Button fx:id="abbrechen" layoutX="396.0" layoutY="525.0" mnemonicParsing="false" onAction="#abbrechen" text="Abbrechen" />
      <Label layoutX="25.0" layoutY="529.0" text="* Pflichtfeld" />
      <Label fx:id="fehler" layoutX="195.0" layoutY="26.0" textFill="RED">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <Label fx:id="warnung" layoutX="195.0" layoutY="26.0" textFill="#cdc600">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
    </children>
</AnchorPane>
